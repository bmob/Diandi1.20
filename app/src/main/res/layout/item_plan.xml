<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_plan_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@drawable/listitem_white"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="15dp"
    android:paddingRight="8dp"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/item_plan_percent_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.0dip"
            android:src="@drawable/flag_percent"
            />

        <TextView
            android:id="@+id/item_plan_progress_text"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="start"
            android:singleLine="true"
            android:text="阅读进度"
            android:textSize="14.0sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.0dip"
            android:text="目标时:"
            android:textSize="14.0sp"/>

        <TextView
            android:id="@+id/item_plan_due_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:textSize="14.0sp"/>
    </LinearLayout>


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/gray"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_plan_head_img"
                android:layout_width="70dp"
                android:layout_height="88dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/item_plan_head_img"
                android:layout_alignTop="@id/item_plan_head_img"
                android:layout_marginRight="4.0dip"/>

            <ImageView
                android:id="@+id/item_plan_newnotify_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/check_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical"
            android:paddingBottom="4.0dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_plan_title_text"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="书名"
                    android:textSize="18.0sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#ffffffff"
                    android:textSize="12.0sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_plan_time_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:paddingTop="3dp"
                    android:text="最近阅读内容..."
                    android:textSize="14.0sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    >

                    <TextView
                        android:id="@+id/item_plan_note_text_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="笔记："
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/item_plan_note_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好笔记：你好我好大家好"
                        android:textSize="14sp"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
