    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_weight="2.5"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_personal_top">

            <ImageView
                android:background="@drawable/background_item_info_head"
                android:id="@+id/item_info_head_img"
                android:padding="10dp"
                android:src="@drawable/happy"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_info_head_img"
                android:layout_alignTop="@id/item_info_head_img"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_info_nick_text"
                    android:text="klob"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_info_signature_text"
                    android:text="面朝大海，春暖花开"
                    android:textColor="@color/base_color_text_white"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_margin="32dp"
                android:src="@drawable/btn_person_addfriend_selector" />

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#77000000"
                android:padding="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="说说"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_says_count"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text="50"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/base_vertical_line" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center_horizontal"
                        android:text="关注"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_follow_count"
                        android:gravity="center_horizontal"
                        android:text="20"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout

            android:layout_weight="4.5"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@color/white">

            <ListView
                android:id="@+id/personal_list"
                android:layout_margin="2dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:dividerHeight="8dp"
                android:divider="@color/transparent">

            </ListView>

        </RelativeLayout>
    </LinearLayout>

    <!--</ScrollView>-->


</LinearLayout>


